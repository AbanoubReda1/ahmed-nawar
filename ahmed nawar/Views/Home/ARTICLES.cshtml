@model IEnumerable<ahmed_nawar.Models.Article>

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
>

<div class="page-wrapper">

    <!-- Preloader -->
    <div class="preloader">
        <div class="spinner_wrap">
            <div class="spinner"></div>
        </div>
    </div>

    <!-- Main Header-->
    <!--End Main Header -->
    <!--Page Title-->
    <section class="page-title" style="background-image:url(/images/background/bg-4.jpg)">
        <div class="auto-container">
            <ul class="bread-crumb">
                <li><a href="index-2.html">Home</a></li>
                <li>
                    Articles
                </li>
            </ul>
            <h1>Articles </h1>
        </div>
    </section>
    <!--End Page Title-->
    <!-- Blog Section -->

    <section class="blog-section sp-two">
        <div class="auto-container">
            <div class="row">
                <!-- News Block One -->
                <div class="news-block-one col-lg-4">
                    @foreach (var item in Model)
                    {
                        <div class="inner-box">

                            <div class="image">

                                <img src="~/images/resource/news-1.jpg" alt="">
                                <a class="overlay" href="blog-details.html"></a>
                            </div>
                            <div class="lower-content">
                                <div class="date"><img src="~/images/er_03.png"></div>

                                <ul class="post-meta">

                                    <li><a href="~/Articles/DownloadFile?filePath=@item.PDF">>Download PDF </a></li>

                                </ul>
                                <h3>  @Html.DisplayFor(modelItem => item.PDFSummry)</h3>

                            </div>
                        </div>
                    }
                    </div>

            </div>
        </div>
    </section>

    <!-- Main Footer -->
    <!-- End Main Footer -->

</div>
